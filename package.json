{
  "name": "cubemap-generator",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "bin": "./dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "test": "ts-node ./src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p .",
    "postbuild": "tsc -p . && pkg ."
  },
  "pkg": {
    "scripts": "dist/*.js",
    "assets": [
      "node_modules/figlet/fonts/Standard.flf",
      "node_modules/canvas/build/Release/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "build",
    "icon": "public/logo.ico"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^20.12.7",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "nanospinner": "^1.1.0",
    "panorama-to-cubemap": "^1.0.2"
  }
}
